@{
}
@model Employee
<div class="card">
    <div class="card-header">
        <h5>Create or Edit Employee</h5>
    </div>

    <form asp-action="CreateEditEmployee" method="post">
        <div class="card-body">
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Id" placeholder="ID" class="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Prename" placeholder="Firstname" class="form-control"/>
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Lastname" placeholder="Lastname" class="form-control"/>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Speichern</button>
        </div>
    </form>
</div>